<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
  <style>
    .img-thumbnail {
      display: inline;
    }
  </style>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <div class="container">
      <h1 class="header-title">Feed</h1>
      <p class="header-welcome">Welcome back, <%= user.username %>. These are some of the <span id="trigger" onclick="easterEgg()">HOT</span> topics of the day.</p>
      
      <div class="row">
        <form action="/logout?_method=DELETE" method="POST" class="col mx-2">
          <button type="submit" class="btn btn-primary">Log Out</button>
        </form>
  
        <% if (user.is_admin) { %>
          <a class="btn btn-primary col" href="/admin">Admin Dashboard</a>
        <% } %>
      </div>
      
    </div>

    <%- include('../partials/post_modal'); %>

    <!-- discussion cards -->
    <div class="container">
      <% posts.forEach(function(row) { %>
      <div class="row">
        <div class="card col m-3">
          <div class="card-body">
            <div class="row flex-row">
              <h5 class="card-title col-md-8 post-title-text"><%= row.post_title %></h5>
              <p class="col-md-2 post-username-text">u/<%= row.poster_username %></p>
              <p class="col-md-2 post-upvotes-text"><%= row.upvotes_received %> Likes</p>
            </div>
            <p class="card-text"><%= row.post_content %></p>
            <div class="row">
              <div class="col-8 post-interaction-container">
                <a href="/post/<%= row.post_id %>" class="btn btn-primary">Join discussion</a>

                <% if (user.is_admin) { %>
                <script>
                  function deletePost(postId) {
                    let data = {
                      postId: postId
                    }
                    fetch('/post', {
                      method: 'DELETE',
                      body: JSON.stringify(data),
                      headers: {
                        'Content-type': 'application/json'
                      }
                    }).then(response => response.json().then((data) => {
                      if (data.success) {
                        console.log("Successfully deleted the post!");
                      } else {
                        console.log("There was an error while deleting!");
                      }
                    }));

                  }
                </script>
                <button class="btn btn-danger" onclick="deletePost('<%= row.post_id %>')">Delete post</a>
                
                <% } %>
              </div>


              <p class="col-4 post-timestamp-text"><%= row.post_timestamp.toString().substring(0, 24) %></p>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

  <script>
    let trigger = document.getElementById("trigger");
    let body = document.getElementsByTagName("body")[0];

    trigger.style.color = "red";

    function easterEgg() {
      console.log("triggered");
      startAnimation();
      setTimeout(endAnimation, 5000);
    }

    function startAnimation() {
      trigger.style.fontSize = "300%";
      trigger.style.fontWeight = "bold";
      body.style.backgroundImage = "url('/images/bonfire.gif')";
      body.style.backgroundSize = "contain";
      body.style.backgroundRepeat = "no-repeat";
    }

    function endAnimation() {
      trigger.style.fontSize = "100%";
      trigger.style.fontWeight = "normal";
      body.style.backgroundImage = ""
    }
  </script>
</body>

</html>